{
  "name": "mouse-gesture-extension",
  "version": "1.1.2",
  "description": "A powerful mouse gesture extension with visual trail effects",
  "type": "module",
  "scripts": {
    "dev": "vite build --mode development --watch",
    "build:dev": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "package": "npm run build && node scripts/build.js",
    "pack:store": "npm run build:prod && node scripts/pack-for-store.js",
    "preview": "vite preview",
    "clean": "rimraf dist packages",
    "validate": "node scripts/validate.js",
    "install-local": "npm run build && echo 'Please load dist/ folder in Chrome Extensions'",
    "zip": "npm run build && cd dist && zip -r ../mouse-gesture-extension.zip ."
  },
  "devDependencies": {
    "@vitejs/plugin-legacy": "^5.0.0",
    "archiver": "^6.0.1",
    "cross-env": "^7.0.3",
    "fs-extra": "^11.2.0",
    "rimraf": "^5.0.5",
    "rollup-plugin-copy": "^3.5.0",
    "terser": "^5.24.0",
    "vite": "^5.0.0",
    "vite-plugin-static-copy": "^1.0.0"
  },
  "keywords": [
    "chrome-extension",
    "mouse-gesture",
    "browser-extension"
  ],
  "author": "zhangsongai3@gmail.com",
  "license": "MIT",
  "dependencies": {
    "nes.css": "^2.2.1"
  }
}
