{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "1.1.1",
  "description": "__MSG_extDescription__",
  "default_locale": "en",
  
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "sessions",
    "sidePanel"
  ],
  
  "host_permissions": [
    "*://*/*"
  ],
  
  "action": {
    "default_title": "Mouse Gesture Settings",
    "default_icon": {
      "16": "src/assets/icons/icon16.png",
      "32": "src/assets/icons/icon32.png",
      "48": "src/assets/icons/icon48.png",
      "128": "src/assets/icons/icon128.png"
    }
  },
  
  "options_page": "src/ui/options/options.html",
  
  "side_panel": {
    "default_path": "src/ui/sidepanel/sidepanel.html"
  },
  
  "background": {
    "service_worker": "src/background/background-main.js"
  },
  
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": [
        "src/utils/coordinate-utils.js",
        "src/utils/dom-utils.js", 
        "src/utils/message-utils.js",
        "src/utils/pattern-analyzer.js",
        "src/core/path-renderer.js",
        "src/core/unified-input-manager.js",
        "src/core/motion-tracker.js",
        "src/ui/components/direction-visualizer.js",
        "src/content/content-main.js"
      ],
      "css": ["src/assets/styles/content.css"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  
  "icons": {
    "16": "src/assets/icons/icon16.png",
    "32": "src/assets/icons/icon32.png", 
    "48": "src/assets/icons/icon48.png",
    "128": "src/assets/icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["src/*", "content/*", "sidepanel/*"],
      "matches": ["*://*/*"]
    }
  ]
}
